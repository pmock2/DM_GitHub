package teamHarambe;

import org.json.JSONObject;

/**
 * Created by Daylon on 10/7/2016.
 */

public class Referee {
    int id;
    String email;
    String password = null;
    boolean isSuperReferee;
    JSONObject loginCode = null;

    public Referee(int id, String email, boolean isSuperReferee) {
    	this.id = id;
        this.email = email;
        this.isSuperReferee = isSuperReferee;
    }
    
    public Referee(int id, String email, String password, boolean isSuperReferee) {
        this.Referee(id, email, isSuperReferee);
    	this.password = password;
    }

	public int getId() {
        return id;
    }
    
    public String getEmail() {
    	return email;
    }
    
    public boolean verifyPassword(String password) {
    	return this.password.equals(password);
    }
    
    public String getPasswordResetMessage() {
    	String s = "You have been emailed a login code. Please log in with this code to "
    			+ (password == null ? "set" : "reset") + " your password. The code will expire in 10 minutes.";
    	
    	return s;
    }
    
    public String toJSON() {
    	String s = "{\"Email\" : \"" + email + "\", \"Password\" : \"" + password + "\", " + "\"LoginCode\" : " 
    			 + (loginCode == null ? null : loginCode.toString())
    			 + "\"IsSuper\" : " + (isSuperReferee == true ? "true" : "false") + "}";
    	
    	return s;
    }
}
